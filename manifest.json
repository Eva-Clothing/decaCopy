{
  "name": "decaCopy",
  "version": "0.01",
  "description": "Copy and drag paste upto 10 text items at a time",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "manifest_version": 2,

  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "permissions": ["activeTab"]
}
